{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "ES6",
        "allowJs": true,
        "noImplicitAny": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "sourceMap": true,
        "baseUrl": "src",
        "jsx": "react"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/components/**/*.spec.tsx"
    ],
}