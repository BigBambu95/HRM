{
    "compilerOptions": {
        "experimentalDecorators": true,
        "useDefineForClassFields" : true,
        "outDir": "dist",
        "module": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "moduleResolution": "Node",
        "target": "ES6",
        "allowJs": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "sourceMap": true,
        "baseUrl": "src",
        "jsx": "react",
        "types": ["vite/client"],
        "paths": {
            "@*": [
                "*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/components/**/*.spec.tsx"
    ],
}